<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <!-- First Name Input -->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutFirstName"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shapeAppearance="@style/CustomShapeAppearanceTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="First Name"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Last Name Input -->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutLastName"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shapeAppearance="@style/CustomShapeAppearanceTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutFirstName"
        android:hint="Last Name"
        android:paddingTop="12dp"
        android:layout_marginLeft="20dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:layout_marginRight="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Nickname Input -->



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutNickName"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shapeAppearance="@style/CustomShapeAppearanceTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutLastName"
        android:hint="NickName"
        android:paddingTop="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"

            />

    </com.google.android.material.textfield.TextInputLayout>



    <!-- Email Input -->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutEmailInput"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shapeAppearance="@style/CustomShapeAppearanceTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutNickName"
        android:hint="Email"
        android:paddingTop="12dp"
        android:layout_marginLeft="20dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"

            />

    </com.google.android.material.textfield.TextInputLayout>



    <!-- Password Input -->



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutPasswordInput"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shapeAppearance="@style/CustomShapeAppearanceTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutEmailInput"
        android:hint="Password"
        android:paddingTop="12dp"
        android:layout_marginLeft="20dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"

            />

    </com.google.android.material.textfield.TextInputLayout>




    <!-- Confirm Password Input -->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutConfirmPasswordInput"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shapeAppearance="@style/CustomShapeAppearanceTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutPasswordInput"
        android:hint="Confirm Password"
        android:paddingTop="12dp"
        android:layout_marginLeft="20dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextConfirmPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Register Button -->



    <Button
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:backgroundTint="@color/color_primary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/inputLayoutConfirmPasswordInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/custom_buttom"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tvGoToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Go to Login"
        android:textColor="@color/color_action_text"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btnRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
