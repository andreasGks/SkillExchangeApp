<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textEditProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/default_user_icon"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/color_secondary"
            app:layout_constraintTop_toBottomOf="@id/textEditProfileTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- First Name -->
        <EditText
            android:id="@+id/firstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:background="@drawable/rounded_edittext"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_light"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profilePhoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Last Name -->
        <EditText
            android:id="@+id/lastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:background="@drawable/rounded_edittext"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_light"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/firstName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <EditText
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Describe yourself..."
            android:minLines="4"
            android:gravity="top|start"
            android:background="@drawable/rounded_edittext"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_light"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/lastName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Location -->
        <EditText
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tap to select location"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/rounded_edittext"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_light"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_button"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:padding="14dp"
            app:layout_constraintTop_toBottomOf="@id/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
